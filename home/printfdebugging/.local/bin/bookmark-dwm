# See LICENSE for full license declaration

dependencies=(
    dmenu
)

for dependency in "${dependencies[@]}"; do
    if ! which "$dependency" >/dev/null 2>&1; then
        echo "${dependency} not found" && exit 1
    fi
done

echo "bookmark" | dmenu "$@" -vi -l 10 | ${SHELL:-"/bin/sh"} &
